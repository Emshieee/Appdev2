@{
    ViewData["Title"] = "Create Or Edit Expense";
}
@model Appdev2.Models.Expense

<div class="text-center">
    <h1 class="display-4" style="color: #ff69b4">CRUD EXPENSE</h1>
    <p style="color: #ff69b4">Create Or Edit Your Expenses</p>
</div>

<form asp-action="CreateEditExpenseForm" asp-controller="Home">

    <label class="mt-4" style="color: #ff69b4">Value</label>
    <input class="form-control" type="number" placeholder="0" asp-for="value" step="0.01" style="border: 1px solid #ff69b4;" />

    <label class="mt-4" style="color: #ff69b4">Description</label>
    <input class="form-control" type="text" placeholder="Add A Description" asp-for="description" style="border: 1px solid #ff69b4;" />

    <button class="btn mt-4" type="submit" style="background-color: #ff69b4; color: #fff; border: none;">
        Confirm
    </button>

</form>

@{
    ViewData["Title"] = "Create Or Edit Expense";
}
@model Appdev2.Models.Expense

<!-- Import Poppins font from Google Fonts -->
<head>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }

        h1, label {
            font-weight: 600;
        }

        .text-danger {
            font-size: 0.9em;
            color: #ff0000;
        }

        .cute-input {
            border-radius: 12px;
            padding: 8px;
            border: 1px solid #ff69b4;
        }
    </style>
</head>

<div class="text-center">
    <h1 style="color: #ff69b4">🌷 CRUD Expense 🌷</h1>
    <p style="color: #ff69b4">✏️ Create Or Edit Your Expenses 💵</p>
</div>

<form asp-action="CreateEditExpenseForm" asp-controller="Home">

    <div class="mb-3">
        <label style="color: #ff69b4">💰 Value</label>
        <input class="form-control cute-input" type="number" placeholder="0" asp-for="value" step="0.01" />
        <span asp-validation-for="value" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label style="color: #ff69b4">🗒️ Description</label>
        <input class="form-control cute-input" type="text" placeholder="Add A Description" asp-for="description" />
        <span asp-validation-for="description" class="text-danger"></span>
    </div>

    <button class="btn mt-4" type="submit" style="background-color: #ff69b4; color: #fff; border: none; border-radius: 12px;">
        ✅ Confirm
    </button>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

